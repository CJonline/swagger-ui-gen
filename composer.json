{
    "name": "php-solution/swagger-ui-gen",
    "type": "component",
    "description": "Extra functionality for generate Swagger specification",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleksandr Savchenko",
            "email": "dev.olsav@gmail.com"
        }
    ],
    "require": {
        "php": "~7.1",
        "symfony/framework-bundle": "~3.0",
        "symfony/console": "~3.0",
        "symfony/dependency-injection": "~3.0",
        "symfony/http-foundation": "~3.0",
        "symfony/config": "~3.0",
        "symfony/routing": "~3.0",
        "symfony/finder": "~3.0",
        "symfony/yaml": "~3.0",
        "justinrainbow/json-schema": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit" : "~6.0",
        "symfony/var-dumper": "~3.0",
        "symfony/form": "~3.0"
    },
    "suggest": {
        "symfony/validator": "For using Symfony validator OpenApi Schema Handler",
        "symfony/form": "For using Symfony form type OpenApi Operation Handler",
        "symfony/serializer": "For using Symfony serializer OpenApi Operation Handler",
        "doctrine/orm": "For using Doctrine ORM OpenApi Schema Handler"
    },
    "autoload":     {
        "psr-4": { "PhpSolution\\SwaggerUIGen\\": "src" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}